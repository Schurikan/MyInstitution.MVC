@model MyInstitution.MVC.Models.EventModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.DateBegin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.DateBegin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.DateEnd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.DateEnd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Image)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Event.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">

    @foreach (var eventDetail in Model.EventDetails.OrderByDescending(e => e.DateCreate))
    {
        <div class="col-12">
            <div class="card h-100">
                <div class="card-header">
                    @eventDetail.EventDetailId | @eventDetail.Title | @eventDetail.ApplicationUserId
                </div>
                @*<div class="card-img-top" style="background-image: url('@eventDetail.Image');"></div>*@
                @*<img src="@eventDetail.Image" class="card-img" alt="#">*@
                @*<div class="card-img-top" style="background-image: url('@eventDetail.Image');"></div>*@
                <div class="card-body">
                    <h5 class="card-title">@eventDetail.Title</h5>
                    <p class="card-text">@eventDetail.Text</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        <a asp-controller="EventDetails" asp-action="Edit" asp-route-id="@eventDetail.EventDetailId">Edit</a> |
                        <a asp-controller="EventDetails" asp-action="Details" asp-route-id="@eventDetail.EventDetailId">Details</a> |
                        <a asp-controller="EventDetails" asp-action="Delete" asp-route-id="@eventDetail.EventDetailId">Delete</a>
                    </small>
                </div>
            </div>
        </div>
    }
</div>

<h3>Neues Kommentar</h3>

<div class="row">

    @using (Html.BeginForm("Add", "EventDetails", FormMethod.Post))
    {
        <div class="col-12">
            <div class="card h-100">
                <form asp-action="Add">
                    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                    @Html.HiddenFor(i => Model.NewEventDetail.EventId)

                    @*@Html.EditorFor(t => Model.NewEventDetail.Title)
                        @Html.EditorFor(t => Model.NewEventDetail.Text)*@

                    <div class="card-header">
                        <div class="form-group">
                            <label asp-for="@Model.NewEventDetail.Title" class="control-label"></label>
                            <input asp-for="@Model.NewEventDetail.Title" class="form-control" />
                            <span asp-validation-for="@Model.NewEventDetail.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="@Model.NewEventDetail.Text" class="control-label"></label>
                            <input asp-for="@Model.NewEventDetail.Text" class="form-control" />
                            <span asp-validation-for="@Model.NewEventDetail.Text" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>


        </div>

    }
</div>
<form enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label asp-for="@Model.Event.Name"></label>
        </dt>
        <dd>
            <input asp-for="@Model.Event.Name" type="file">
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn" type="submit" value="Upload">
</form>
