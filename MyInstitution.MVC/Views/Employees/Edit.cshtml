@model MyInstitution.MVC.Models.EmployeeModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Employee.Id" />
            <div class="form-group">
                <label asp-for="@Model.Employee.Forename" class="control-label"></label>
                <input asp-for="@Model.Employee.Forename" class="form-control" />
                <span asp-validation-for="@Model.Employee.Forename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Surname" class="control-label"></label>
                <input asp-for="@Model.Employee.Surname" class="form-control" />
                <span asp-validation-for="@Model.Employee.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Image" class="control-label"></label>
                <input asp-for="@Model.Employee.Image" class="form-control" />
                <span asp-validation-for="@Model.Employee.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.GroupId" class="control-label"></label>
                <select asp-for="@Model.Employee.GroupId" asp-items="@Model.Groups" class="form-control">
                    <option>Bitte auswählen</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
