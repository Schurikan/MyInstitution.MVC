@model MyInstitution.MVC.Models.GroupMemberModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.GroupLeaderEmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupLeaderEmployeeId)
            @Html.DisplayFor(model => model.GroupLeader.Forename)
            @Html.DisplayFor(model => model.GroupLeader.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model =>model.Group.Image)" style="height:250px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Group.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="row">

    <div class="col-6">
        <h3>Employees</h3>
        <div class="card-columns">
            @foreach (var employee in Model.Employees)
            {
                <div class="card">
                    <div class="card-header">
                        @employee.Id @employee.Forename @employee.Surname
                    </div>
                    <div class="card-img" style="background-image: url('@employee.Image');"></div>
                    <div clsss="card-body">
                        <div class="card-title">
                            
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-6">
        <h3>Clients</h3>
        <div class="card-columns">
            @foreach (var client in Model.Clients)
            {
                <div class="card">
                    <div class="card-header">
                        @client.Id @client.Forename @client.Surname
                    </div>
                    <div class="card-img" style="background-image: url('@client.Image');"></div>
                    <div clsss="card-body">
                        <div class="card-title">
                           
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            }
        </div>
    </div>
</div>