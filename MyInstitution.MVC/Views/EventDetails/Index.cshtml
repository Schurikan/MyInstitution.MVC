@model IEnumerable<MyInstitution.MVC.Models.EventDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <img src="/img/event-details/@item.Image" class="img-fluid" alt="Responsive image">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
